<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zihan.appframe">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".FrameApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".biz.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".biz.tab.TabActivity"
            android:windowSoftInputMode="adjustUnspecified|stateHidden" />
        <activity android:name=".biz.dbflow.DbActivity"></activity>
        <activity android:name=".biz.restore.FragmentRetainDataActivity" />
        <activity android:name=".biz.restore.FragmentRetainInstance" />
    </application>

</manifest>